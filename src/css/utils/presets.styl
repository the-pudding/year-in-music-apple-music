set-type-class(all, true)

// Various hides
.hide-accessible
	hidden(accessible)
.hide-invisible
	hidden(invisible)
.hide-display
	hidden()
	
// Skip to main for accessibility
.skip-to-main
	border none
	hidden(accessible)
	&:focus 
		width auto
		height auto
		background-color $off-white
		padding 0.5rem
		z-index set-index(overlay)

.prose
	max-width $column-width
	margin 0 auto
	padding 0 1rem

.media-overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background url('data:image/png;base64,')


#starter-guide
	max-width 40rem
	margin 0 auto